package customer.entity;

import jakarta.persistence.*;
import lombok.*;

@Entity
@Table(name = "customers")
@Data
@NoArgsConstructor
@AllArgsConstructor
public class Customer {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    private String name;
    private String email;
    private String city;
}

// Lombok annotations (@Data, @NoArgsConstructor, @AllArgsConstructor) remove the need for getters, setters, constructors, etc.